{
  "name": "react-sample-app",
  "version": "0.1.0",
  "description": "React Sample App",
  "main": "dist/client.js",
  "scripts": {
    "dev:build:server": "webpack --watch --progress --config configs/server.dev.js",
    "dev:build:client": "webpack --watch --progress --config configs/client.dev.js",
    "dev:server": "node dist/server.js",
    "dev:bench": "autocannon http://localhost:2233",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tkmttm/react-sample-app.git"
  },
  "keywords": [],
  "author": "ttsutsumi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tkmttm/react-sample-app/issues"
  },
  "homepage": "https://github.com/tkmttm/react-sample-app#readme",
  "lint-staged": {
    "*.{ts, tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.js": [
      "npx prettier --no-semi --single-quote --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/react": "^16.4.17",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-config": "^1.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.0.3",
    "@types/redux": "^3.6.0",
    "@types/webpack": "^4.4.17",
    "@types/webpack-dev-middleware": "^2.0.2",
    "@types/webpack-env": "^1.13.6",
    "@types/webpack-hot-middleware": "^2.16.4",
    "autocannon": "^3.0.1",
    "clean-webpack-plugin": "^0.1.19",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.5.2",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "loadable-components": "^2.2.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-config": "^4.4.0-beta.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1"
  }
}
