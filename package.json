{
  "name": "react-sample-app",
  "version": "0.1.0",
  "description": "React Sample App",
  "main": "dist/client.js",
  "scripts": {
    "dev:build": "webpack --watch --progress",
    "dev:server": "nodemon --watch dist dist/server.js",
    "test": "jest --coverage",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/tkmttm/react-sample-app.git"
  },
  "keywords": [],
  "author": "ttsutsumi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tkmttm/react-sample-app/issues"
  },
  "homepage": "https://github.com/tkmttm/react-sample-app#readme",
  "lint-staged": {
    "*.{ts, tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.5",
    "@types/react": "^16.4.16",
    "@types/react-dom": "^16.0.9",
    "clean-webpack-plugin": "^0.1.19",
    "husky": "^1.1.2",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.1.3",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "express": "^4.16.4",
    "react": "^16.5.2",
    "react-dom": "^16.5.2"
  }
}